{{!-- Site footer --}}
<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-md-4 clearfix">
        <div class="footer-section">
          <p class="footer-section-title">About</p>
        </div>
        {{!-- Blog logo or title --}}
        <a href="{{@blog.url}}">
          {{#if @blog.logo}}
            <img src="{{@blog.logo}}" alt="{{@blog.title}}" 
                 class="img-responsive footer-logo"/>
          {{else}}
            <h3 class="footer-title">{{@blog.title}}</h3>
          {{/if}}
        </a>
        {{!-- Blog description --}}
        <p>{{@blog.description}}</p>
        <hr class="footer-divider"> 
        {{!-- Social media links --}}
        {{>social-media}}
      </div>
      <div class="col-md-4 clearfix">
        <div class="footer-section">
          <p class="footer-section-title">Tag Cloud</p>
        </div>
        {{!-- Tag cloud --}}
        {{> tag-cloud}}
      </div>
      <div class="col-md-4 clearfix">
        <div class="footer-section">
          <p class="footer-section-title">Latest News</p>
        </div>
        {{!-- Show the 2 most recent posts --}}
        {{#get "posts" include="author, tags" limit=2 }} 
          {{#foreach posts}}
          <div class="footer-post clearfix">
            <a href="{{url}}" class="">
              <div class="footer-post__image" style="{{#if feature_image}} 
                background-image: url({{img_url feature_image}}) {{/if}}"></div>
            </a>
            <div class="footer-post__info">
              <p class="footer-post__title"><a href="{{url}}">{{title}}</a></p>
              <p class="footer-post__author">{{author}}</p>
              <p class="footer-post__date">{{date published_at timeago="true"}}</p>
            </div>
          </div>
          {{^if @last}} <hr class="footer-divider"> {{/if}} 
          {{/foreach}} 
        {{/get}}
      </div>
    </div>
  </div>
  {{!-- Copyright --}}
  <div class="footer-bottom">
    <div class="copyright text-center">
      Copyright &copy; {{date format="YYYY"}}
      <a href="{{@blog.url}}">{{@blog.title}}</a>. All rights reserved.
    </div>
  </div>
</footer>