{{!-- Site footer --}}
<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-md-4 clearfix">
        <div class="footer-section"><p class="footer-section-title">About</p></div>
        <a href="{{@blog.url}}">
          {{#if @blog.logo}}
            <img src="{{@blog.logo}}" alt="{{@blog.title}}" class="img-responsive footer-logo">
          {{else}}
            <h3 class="footer-title">{{@blog.title}}</h3>
          {{/if}}
        </a>
        <p>{{@blog.description}}</p>
        <hr class="footer-divider">
        {{>social-media}}
      </div>
      <div class="col-md-4 clearfix">
        <div class="footer-section"><p class="footer-section-title">Tag Cloud</p></div>
        {{> tag-cloud}}
      </div>
      <div class="col-md-4 clearfix">
        <div class="footer-section"><p class="footer-section-title">Latest News</p></div>
        {{#foreach posts to=2}}
          <div class="footer-post clearfix">
            <a href="{{url}}">
              <div class="footer-post__image" style="{{#if image}} background-image: url({{image}}) {{/if}}"></div>
            </a>
            <div class="footer-post__info">
              <a href="{{url}}"><p class="footer-post__title">{{title}}</p></a>
              <p class="footer-post__author">by {{author}} {{date published_at timeago="true"}}</p>
            </div>
          </div>
          {{^if @last}}
            <hr class="footer-divider">
          {{/if}}
        {{/foreach}}
      </div>
    </div>
  </div>
  {{!-- {{> social-media}} --}}
  <div class="footer-bottom">
    <div class="copyright text-center">
      Copyright &copy; {{date format="YYYY"}}
      <a href="{{@blog.url}}">{{@blog.title}}</a>.
      All rights reserved.
    </div>
  </div>
</footer>
