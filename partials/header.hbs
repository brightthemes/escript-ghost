{{!-- Site header --}}
<header>
  {{!-- Default navigation --}}
  <nav class="navbar navbar__default">
    <div class="navbar-header container">
      <div class="col-xs-3 col-sm-4 navbar-search">
        <div class="navbar-search btn-search--open">
          <div class="navbar-search__group">
            <i class="fa fa-search"></i>
            <p class="hidden-xs">{{t "Search"}}</p>
          </div>
        </div>
      </div>
      {{!-- Blog logo or name --}}
      <div class="col-xs-6 col-sm-4 navbar-logo">
        <a href="{{@site.url}}">
          {{#if @site.logo}}
            <img class="lazyload" data-src="{{@site.logo}}" alt="{{@site.title}}">
          {{else}}
            <h3 class="navbar-title">{{@site.title}}</h3>
          {{/if}}
        </a>
      </div>
      {{!-- Menu button --}}
      <div class="col-xs-3 col-sm-4 navbar-menu">
        <button class="btn-navbar--open button--light pull-right">
          <span class="active-page hidden-xs">{{t "Menu"}}</span>
          <i class="fa fa-bars"></i>
        </button>
      </div>
    </div>
    <div class="navbar-navigation">
      <a href="" class="btn--close btn-navbar--close">
        <span class="hidden">{{t "Close"}}</span>
      </a>
      {{!-- Blog navigation --}}
      {{navigation}}
    </div>
  </nav>
</header>
