{{!-- Subscribe component (Ghost) --}}
{{#if @labs.subscribers}}
  <section class="subscribe" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="subscribe-overlay"></div>
    <div class="container text-center">
      <div class="gh-subscribe">
        <h3 class="gh-subscribe-title">Subscribe to {{@blog.title}}</h3>
        <p>Get the latest posts delivered right to your inbox.</p>
        {{> subscribe-form input_class="subscribe-form__input" button_class="subscribe-form__button" placeholder="Your email"}}
        <div class="gh-subscribe-rss">or subscribe 
          <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/">via RSS</a> with Feedly!
        </div>
      </div>
    </div>
  </section>
{{/if}}
